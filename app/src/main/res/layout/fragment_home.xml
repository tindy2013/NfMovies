<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height">
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_height"
                android:background="?attr/colorPrimaryDark"
                android:theme="?attr/actionBarTheme"
                android:minHeight="@dimen/bar_height"
                android:id="@+id/homeToolbar"
                app:layout_scrollFlags="scroll|enterAlways">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="65dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_logo"
                        android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                />
                <TextView
                        android:text="菜单"
                        android:clickable="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/site_menu"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:layout_marginStart="20dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                           xmlns:tools="http://schemas.android.com/tools"
                                                           android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                                                           android:layout_height="wrap_content" app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                           android:id="@+id/home_swipe_refresh">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:visibility="invisible"
                    android:id="@+id/content_progress"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:indeterminate="true"
                    app:mpb_progressStyle="horizontal"
                    app:mpb_indeterminateTint="@color/netflixRed"
                    app:mpb_useIntrinsicPadding="false"
                    app:mpb_showProgressBackground="false"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding"
                    app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/content_rv"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>